<mjml>
  <mj-head>
    <mj-title>{{ project_name }} - Password Recovery</mj-title>
    <mj-attributes>
      <mj-all font-family="-apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif" />
      <mj-text font-size="24px" color="#6e6e73" line-height="150%" />
    </mj-attributes>
    <mj-style>
      .divider-line {
        border-top: 1px solid #e5e5e7 !important;
        margin: 0 !important;
      }
    </mj-style>
  </mj-head>
  
  <mj-body background-color="#EDEDED">
    <!-- Top spacing to show grey background -->
    <mj-section padding="60px 0 0 0">
      <mj-column>
        <mj-text></mj-text>
      </mj-column>
    </mj-section>
    
    <!-- White card container -->
    <mj-wrapper background-color="#ffffff" padding="0">
      <!-- Top padding inside white card -->
      <mj-section padding="40px 30px 0 30px">
        <mj-column>
          <!-- Main message -->
          <mj-text 
            font-size="18px" 
            color="#6e6e73"
            padding="0 0 30px 0"
            font-weight="400"
            align="left"
          >
            We received a request to recover the password for user {{ email }}
          </mj-text>
          
          <mj-text 
            font-size="16px"
            color="#6e6e73"
            padding="0 0 30px 0"
            font-weight="400"
            align="left"
          >
            Reset your password by clicking the button below:
          </mj-text>
          
          <mj-button 
            background-color="#ED6C2D" 
            color="#ffffff" 
            href="{{ link }}" 
            font-size="16px" 
            font-weight="bold" 
            border-radius="4px" 
            padding="15px 30px"
          >
            Reset Password
          </mj-button>
          
          <mj-text 
            font-size="14px"
            color="#6e6e73"
            padding="30px 0 10px 0"
            font-weight="400"
            align="left"
          >
            Or open the following link:
          </mj-text>
          
          <mj-text 
            font-size="14px"
            color="#6e6e73"
            padding="0 0 30px 0"
            font-weight="400"
            align="left"
          >
            <a href="{{ link }}" style="color: #ED6C2D; text-decoration: underline;">{{ link }}</a>
          </mj-text>
          
          <mj-text 
            font-size="14px"
            color="#6e6e73"
            padding="0 0 50px 0"
            font-weight="400"
            align="left"
          >
            The reset password link will expire in {{ valid_hours }} hours.<br/>
            If you didn't request a password recovery you can disregard this email.
          </mj-text>
        </mj-column>
      </mj-section>
      
      <!-- Divider line -->
      <mj-section padding="0 30px">
        <mj-column>
          <mj-divider 
            border-color="#e5e5e7" 
            border-width="1px"
            padding="0"
          />
        </mj-column>
      </mj-section>
      
      <!-- Footer inside card -->
      <mj-section padding="25px 30px 40px 30px">
        <mj-column width="50%">
            <!-- Signature -->
          <mj-text 
            font-size="16px"
            color="#6e6e73"
            padding="0 0 30px 0"
            font-style="italic"
            align="left"
          >
            {{ signature }}
          </mj-text>
        </mj-column>
        <mj-column width="50%">
          <mj-text 
            font-size="16px"
            align="right"
            font-weight="400"
            padding="0"
          >
            <a href="{{ web_app_url }}" style="color: #6e6e73;">{{ project_name }}</a>
          </mj-text>
        </mj-column>
      </mj-section>
    </mj-wrapper>
    <!-- Bottom spacing to show grey background -->
    <mj-section padding="60px 0">
      <mj-column>
        <mj-text></mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
